def analyze_research_findings(research_data):
    """Analyze research findings and extract key insights."""
    print('\n' + '=' * 80)
    print('ANALYZING RESEARCH FINDINGS')
    print('=' * 80)
    try:
        from skills import SkillRegistry
        registry = SkillRegistry()
        text_skill = registry.get('text_analysis')
        combined_research = ''
        for (category, data) in research_data.items():
            if data.get('results'):
                combined_research += f'\n=== {category.upper()} ===\n'
                for result in data['results'][:3]:
                    combined_research += f"- {result.get('title', 'No title')}\n"
                    combined_research += f"  {result.get('summary', 'No summary')}\n\n"
        analysis = text_skill.execute({'text': combined_research, 'analysis_type': 'comprehensive'})
        print('Research analysis completed!')
        return analysis.get('summary', '')
    except Exception as e:
        print(f'Analysis failed: {e}')
        return ''

